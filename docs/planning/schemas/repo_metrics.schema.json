{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/repo_metrics.schema.json",
  "title": "Repository Metrics",
  "type": "object",
  "required": ["repo", "generated_at", "summary"],
  "properties": {
    "repo": { "type": "string" },
    "rev": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "summary": {
      "type": "object",
      "required": ["commits", "authors", "files", "loc"],
      "properties": {
        "commits": { "type": "integer", "minimum": 0 },
        "authors": { "type": "integer", "minimum": 0 },
        "files": { "type": "integer", "minimum": 0 },
        "loc": { "type": "integer", "minimum": 0 }
      }
    },
    "breakdown": {
      "type": "object",
      "properties": {
        "by_directory": { "type": "object", "additionalProperties": { "type": "integer" } },
        "by_extension": { "type": "object", "additionalProperties": { "type": "integer" } },
        "recent_activity": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["date", "commits"],
            "properties": {
              "date": { "type": "string", "format": "date" },
              "commits": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}

