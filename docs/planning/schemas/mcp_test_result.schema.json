{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/mcp_test_result.schema.json",
  "title": "MCP Test Result",
  "type": "object",
  "required": ["status", "exit_code", "summary"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["pass", "fail", "error"]
    },
    "exit_code": { "type": "integer" },
    "summary": { "type": "string" },
    "output": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tails": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "additionalProperties": true
}

